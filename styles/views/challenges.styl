
.page-challenges
    .weekday
        display none
    &.mischiefweek2015 .page-width
        position relative
        
        .web
            position absolute
            top 10px
            width 400px
            height 400px
            z-index -1
            
            &.left
                bg-image("mischiefweek/web-left", 400px 400px, false, no-repeat)
                left -200px
            &.right
                bg-image("mischiefweek/web-right", 400px 400px, false, no-repeat)
                right -200px
                
        .header
            position relative
            z-index 0
            margin-bottom 20px
            bg-image("mischiefweek/mischief-header", 100% 160px, false, no-repeat)
            height 160px
            width 100%
            
        .challenges-list li a
            .weekday
                display block
                position absolute
                top 0
                bg-image("mischiefweek/sash-purple", 80px 80px, false, no-repeat)
                height 80px
                width 80px
                
                span
                    display block
                    transform rotate(-45deg)
                    transform-origin 67px 30px
                    text-transform uppercase
                    font-weight 700
                    smooth-font()
                    font-size 14px
                    text-align center
                    color color-white
            
            &.current .weekday
                bg-image("mischiefweek/sash-orange", 80px 80px, false, no-repeat)
    
    .page-title
        position relative
        font-weight 400
        
        .quests
            position absolute
            left 0
            display inline-block
            
            a
                color #888
    
    ul.worlds-list
        debullet()
        clearfix()
        width 100%
        padding 0
        margin 0 0 30px 0

        li.world-item
            display inline-block
            box-sizing: border-box
            margin 0 20px 20px 0
            width 48%
            
            a.world-cover
                width 100%
                display block
                height 240px
                background-color #3D424C
                position relative
                border-radius(3px 3px 3px 3px)
                        
                h4
                    position absolute
                    bottom 0
                    left 0
                    right 0
                    background-color color-white
                    color color-black
                    padding 10px
                    font-weight 700
                    font-size 16px
                    smooth-font()
                    border-radius(0 0 3px 3px)
                    
                    &:after
                        icon()
                        circle(20px, transparent)
                        float right
                        font-size 9px
                        margin-top 3px
                        margin-right 3px
                        color color-white
                        line-height 22px
                        margin 0
                
                &.current
                    box-shadow color-blue 0 0 0 4px
                    border-radius(3px)
                    
                    h4:after
                        content '\e615'
                        background-color color-blue
                    
                &.completed
                    h4
                        background-color color-green
                        color color-white
                        &:after
                            content '\e61d'
                            background-color darken(color-green, 5)
                            
                &.locked
                    filter(grayscale(100%))
                    cursor default

                    h4
                        color darken(color-grey-lighter, 10)
                        &:after
                            content '\e621'
                            margin-top 0
                            background darken(color-grey-lighter, 10)
                        
    ul.challenges-list, ul.shares-list
        debullet()
        clearfix()
        margin -10px
        margin-bottom 30px

        &, h1, h2, h3, h4, h5, h6
            color color-black

        li
            width (100% / 5)
            float left
            padding 10px
            box-sizing border-box

            a
                border-radius()
                no-select()
                display block
                overflow hidden
                background color-white
                position relative

                .detail
                    padding 10px

                h5
                    ellipsis()
                    smooth-font()
                    font-weight bold
                    font-size 15px
                    overflow visible

                    em
                        smooth-font(false)
                        font-weight normal
                        font-style normal

                    &:after
                        icon()
                        circle(20px, transparent)
                        float right
                        font-size 9px
                        margin-top 3px
                        margin-right 3px
                        color color-white
                        line-height 22px
                        margin 0

                .cover
                    width 100%
                    padding-bottom 100%
                    background-color color-grey-lighter
                    background-position center center
                    background-size cover
                    position relative

                &.current
                    box-shadow rgba(color-blue, 1) 0 0 0 5px

                    h5:after
                        content '\e615'
                        background color-blue

                    .cover
                        opacity .5

                &.completed
                    background color-green

                    h5
                        opacity 1
                        color #fff

                        &:after
                            content '\e61d'
                            background darken(color-green, 5)

                &.locked
                    filter(grayscale(100%))
                    cursor default

                    .cover, h5
                        opacity .3

                    h5:after
                        content '\e621'
                        margin-top 0
                        background color-grey

                &.highlight
                    background-color color-orange

                    .cover
                        background-color mix(color-orange, color-grey-lightest, 40)

                    .detail h5
                        color #fff

                &.browse
                    background-color #1cb2c0

                    .cover
                        background-color #46ddeb

.modal-challenge-info
    top 50px
    width 480px
    margin-left -240px
    padding 0

    h3, p
        text-transform none

    h3
        smooth-font()
        font-weight bold
        margin-bottom 5px

    p
        font-size 18px

    .cover
        min-height 200px
        background-size cover
        background-position center center

    .detail
        padding 30px

.modal-mail-preview
    top 50px
    width 500px
    margin-left -250px
    padding 0
    
    .preview
        height auto
        width 100%
        box-sizing border-box
        background-color color-grey-lighter
        padding-bottom 20px
        border-radius(5px)
        
        .header
            padding 20px 0
            background-color color-header
            color white
            text-transform none
            font-weight bold
            font-size 24px
            smooth-font()
            width 100%
            
        h4
            smooth-font()
            font-weight bold
            margin 10px 0
            text-transform none
            
        .content
            padding 0 20px
            display(flex)
            flex-direction(row)
            flex-wrap(nowrap)
            justify-content(space-between)
            
            .left-content
                flex 60
                input, textarea
                    display block
                    margin 0 0 10px
                    padding 12px 10px
                    width 100%
                    background color-white
                    border 1px solid color-ruler
                    box-sizing border-box
                    box-shadow 0 1px 0 0 rgba(#000, .1) inset
                    border-radius(5px)
                    font-family font-body
                    font-size 16px
                    font-weight bold
                    smooth-font()
                    
                    &:focus
                        border 1px solid color-primary
                        outline 0
                
                textarea
                    height 150px
                    resize none
                    
            .right-content
                flex 35
                margin-left 20px
                .pic
                    margin-bottom 65px
                    img
                        width 150px
                        height 150px
                .button-success
                    padding 12px 60px
                    border-radius(5px)
                    
                .disabled
                    background-color color-grey-lighter
                    color color-grey

placeholder()
    color mix(color-grey-light, color-grey-lighter, 70%)

::-webkit-input-placeholder
    placeholder()

:-moz-placeholder
    placeholder()

::-moz-placeholder
    placeholder()

:-ms-input-placeholder
    placeholder()
