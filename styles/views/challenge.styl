.page-challenge
    
    .challenge-container
        width 100%
        height 100%
        display flex
        flex-direction row
        flex-wrap nowrap
        
    .button-hint
        button-color(color-editor-bg)
        
        display none

        &.highlight
            background red

    .success-display
        clearfix()
        border-radius()
        position absolute
        top 0
        left 0
        right 0
        bg-inverse color-green
        padding 20px
        padding-bottom 0
        margin 20px
        box-sizing border-box
        text-align center
        background lighten(color-green, 5)

        h5
            padding-right 100px

        a
            position absolute
            right 0
            top 0
            height 100%
            box-sizing border-box
            background color-green
            line-height 64px
            color color-white
            font-weight bold

    editor.disabled
        position relative

        > *
            blur-fx .9px
            
    .code-wrap, .tutorial-wrap
        position relative
        width 50%
        min-height 200px
        padding 0 5px
        margin 0 5px
    
    .tutorial-wrap
        display flex
        align-items flex-start
        justify-content center
        

    .tutorial-display
        border-radius()
        padding 10px 30px
        font-size 20px

        .content
            margin-bottom 20px

        &:before
            tooltip-tail(left, @background, 15px)
            content ''
            position absolute
            top 70px

    .display-wrap
        position relative

        .actions
            position absolute
            left 10px
            bottom 10px

            .button
                margin-left 10px

    .father-day.workspace-header.success
            background #e5e5e5
            font-size 20px
            padding 30px

            &, h4
                color #333

            h4
                font-size 25px
                margin-bottom 10px

            img
                max-width 200px

            .button
                color color-white
                background color-green