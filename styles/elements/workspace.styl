.workspace-header
    clearfix()
    border-radius()
    background lighten(color-editor-bg, 15)
    margin-bottom 10px
    margin-top 10px

    // Hack to move hint button on top
    .button
        position relative
        z-index 1

    .drop-down
        // background color-black
        display block
        padding 20px
        box-sizing border-box
        width 50%
        float left

    .inner
        padding 20px

    progress-circle
        display none
        float left
        margin-right 20px

    h1, h2, h3, h4, h5, h6
        font-weight normal

    h3
        smooth-font()
        text-transform uppercase
        margin-bottom 5px
        font-size 15px
        font-weight bold
        opacity .5

    h4
        smooth-font()
        font-weight bold
        font-size 20px
        margin-bottom 20px
        
        &:last-child
            margin-bottom 0

    .hint
        smooth-font(false)
        font-size 20px
        font-weight normal

        strong
            smooth-font()
        

        @media layout-media-mobile
            p
                font-size 0.6em
            p code
                font-size 0.7em

    &.success
        background-color color-success
        
        .button
            button-color(color-white, darken(color-success, 10))

    .step-display
        width 50%
        float left
        padding 20px
        box-sizing border-box
        color color-white

    .title, .subtitle
        display block

    .title
        font-size 14px
        color color-white
        text-transform uppercase
        
    .subtitle
        smooth-font()
        font-weight bold
        font-size 20px

    .step-display .subtitle
        smooth-font(false)
        font-size 16px
        font-weight normal
        margin-top 5px

    code
        background color-blue
        color #fff
        margin 0 3px
        position relative
        top -1px
        font-size 15px
        padding 5px
        font-weight 100